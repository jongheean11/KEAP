<!--
        <kv:KinectSkeletonViewer HorizontalAlignment="Center" VerticalAlignment="Center" KinectSensorManager="{Binding KinectSensorManager}" Width="960" Height="720" ShowBones="True" ShowJoints="True" ShowCenter="True" ImageType="Depth" />
-->
        <Canvas>
            <TextBlock Canvas.ZIndex="1006" Text="{Binding Gesture}" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="48" FontWeight="Bold" Margin="-2,0,0,100"/>
            <TextBlock Canvas.ZIndex="1007" Text="{Binding Values}" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="48" FontWeight="Bold" Margin="-2,100,0,0"/>
            <TextBlock Canvas.ZIndex="1008" Name="RightHandGrip" HorizontalAlignment="Right" VerticalAlignment="Top" FontSize="40" FontWeight="Bold" Margin="100,10,10,10"/>
            <TextBlock Canvas.ZIndex="1009" Name="LeftHandGrip" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="40" FontWeight="Bold" Margin="10,10,100,10"/>
            <kv:KinectSkeletonViewer
                                        Canvas.ZIndex="0"
                                        KinectSensorManager="{Binding KinectSensorManager}"
                                        Width="320"
                                        Height="240"
                                        ShowBones="True" ShowJoints="True" ShowCenter="True" ImageType="Depth" />
        </Canvas>
    </Grid>
</Window>

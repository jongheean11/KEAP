            <Button Grid.Row="1" Grid.Column="10" Margin="5,10,5,5" Content="ZoomOut" HorizontalAlignment="Center" VerticalAlignment="Center" Width="Auto" Click="ZoomOut_Click"/>
            <Button Grid.Row="0" Grid.Column="12" Margin="5,10,5,5" Content="Tornado" HorizontalAlignment="Center" VerticalAlignment="Center" Width="Auto" Click="Tornado_Click"/>

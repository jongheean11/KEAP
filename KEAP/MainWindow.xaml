<Window x:Class="KEAP.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow">
    <Grid x:Name="MainGrid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.7*"/>
            <ColumnDefinition Width="3.75*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.15*"/>
            <RowDefinition Height="0.15*"/>
            <RowDefinition Height="92"/>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="0.4*"/>
            <RowDefinition Height="0.1*"/>
        </Grid.RowDefinitions>
        <ListView x:Name="Slide_ListView" Margin="0" SelectionChanged="Slide_ListView_SelectionChanged" Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="1" ItemsSource="{Binding Slides_List}" Width="Auto" Height="Auto" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <!--DEBUG-->
                    <StackPanel x:Name="Slide_ItemStackPanel" Orientation="Horizontal" VerticalAlignment="Center"  HorizontalAlignment="Center" Height="{Binding Path=Slide_Height}"> <!--Width="{Binding Path=Slide_Width}">-->
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="25"/>
                                <ColumnDefinition Width="1*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Name="Item_Number" HorizontalAlignment="Left" Text="{Binding Path=Number}" Margin="5,0,5,0" Width="15" TextTrimming="WordEllipsis" FontSize="12" Grid.Column="0"/>
                            <!--Height="{Binding Path=Image_Height}"-->
                            <Border Margin="5,0,5,0" VerticalAlignment="Center" HorizontalAlignment="Right" BorderBrush="LightGray" Grid.Column="1">
                                <Image Source="{Binding Path=Source}" VerticalAlignment="Center" Stretch="Fill" Width="{Binding Path=Image_Width}" Height="{Binding Path=Image_Height}"/>
                            </Border>
                        </Grid>
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <Border x:Name="Main_Border" Grid.Row="3" Grid.Column="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Background="#FFE6E6E6" >
            <Border x:Name="MainCanvas_Border" Width="Auto" Height="Auto" HorizontalAlignment="Center" VerticalAlignment="Center" BorderBrush="LightGray" Background="White"/>
        </Border>
        <Button x:Name="BackMenu" Content="뒤로가기" HorizontalAlignment="Left" VerticalAlignment="Top" Width="60" Margin="10,0,10,0" Grid.Row="1" Grid.ColumnSpan="2" Click="BackMenu_Click" Background="{x:Null}" BorderBrush="{x:Null}"/>
        <Button x:Name="HomeMenu" Content="홈" HorizontalAlignment="Left" VerticalAlignment="Top" Width="40" Margin="75,0,10,0" Grid.Row="1" Grid.ColumnSpan="2" Click="HomeMenu_Click" Background="{x:Null}" BorderBrush="Gray"/>
        <Button x:Name="InsertMenu" Content="삽입" HorizontalAlignment="Left" VerticalAlignment="Top" Width="45" Margin="120,0,10,0" Grid.Row="1" Grid.ColumnSpan="2" Click="InsertMenu_Click" Background="{x:Null}" BorderBrush="{x:Null}"/>
        <Button x:Name="DesignMenu" Content="디자인" HorizontalAlignment="Left" VerticalAlignment="Top" Width="50" Margin="170,0,10,0" Grid.Row="1" Grid.ColumnSpan="2" Click="DesignMenu_Click" Background="{x:Null}" BorderBrush="{x:Null}"/>
        <Button x:Name="AnimationMenu" Content="애니메이션" HorizontalAlignment="Left" VerticalAlignment="Top" Width="65" Margin="225,0,10,0" Grid.Row="1" Grid.ColumnSpan="2" Click="AnimationMenu_Click" Background="{x:Null}" BorderBrush="{x:Null}"/>
        <Button x:Name="ConvertMenu" Content="전환" HorizontalAlignment="Left" VerticalAlignment="Top" Width="45" Margin="295,0,10,0" Grid.Row="1" Grid.ColumnSpan="2" Click="ConvertMenu_Click" Background="{x:Null}" BorderBrush="{x:Null}"/>
        <Button x:Name="StyleMenu" Content="서식" HorizontalAlignment="Left" VerticalAlignment="Top" Width="45" Margin="345,0,10,0" Grid.Row="1" Grid.ColumnSpan="2" Click="StyleMenu_Click" Background="{x:Null}" BorderBrush="{x:Null}"/>

        <Border x:Name="Menu_Border" BorderBrush="Gray" BorderThickness="1" Grid.Row="2" Grid.RowSpan="1" Grid.ColumnSpan="2">
        </Border>
        <Grid x:Name="HomeMenu_Grid"  Grid.Row="2" Grid.RowSpan="1" Grid.ColumnSpan="2" Visibility="Visible">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="62"/>
                <!--0-->
                <ColumnDefinition Width="100"/>
                <ColumnDefinition Width="2"/>
                <ColumnDefinition Width="62"/>
                <ColumnDefinition Width="2"/>
                <ColumnDefinition Width="145"/>
                <!--5-->
                <ColumnDefinition Width="60"/>
                <ColumnDefinition Width="2"/>
                <ColumnDefinition Width="183"/>
                <ColumnDefinition Width="2"/>
                <ColumnDefinition Width="60"/>
                <ColumnDefinition Width="60"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Button x:Name="ClipBoardButton" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="0,1,0,1" Background="{x:Null}" Grid.Column="0" Grid.RowSpan="3" BorderBrush="LightGray">
                <DockPanel LastChildFill="True">
                    <Image DockPanel.Dock="Top" Source="Images/Button/clip.png" Height="30" />
                    <Label HorizontalContentAlignment="Center" DockPanel.Dock="Bottom">클립보드</Label>
                </DockPanel>
            </Button>
            <Button x:Name="CutButton" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="0,1,0,0" Background="{x:Null}" Grid.Row="0" Grid.Column="1" BorderBrush="LightGray">
                <DockPanel LastChildFill="True">
                    <Image DockPanel.Dock="Left" Source="Images/Button/cut.png" Width="25"/>
                    <Label HorizontalContentAlignment="Center" DockPanel.Dock="Right">잘라내기</Label>
                </DockPanel>
            </Button>
            <Button x:Name="CopyButton" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="0,0,0,0" Background="{x:Null}" Grid.Row="1" Grid.Column="1" BorderBrush="LightGray">
                <DockPanel LastChildFill="True">
                    <Image DockPanel.Dock="Left" Source="Images/Button/copy.png"/>
                    <Label HorizontalContentAlignment="Center" DockPanel.Dock="Right">복사하기</Label>
                </DockPanel>
            </Button>
            <Button x:Name="PasteButton" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="0,0,0,1" Background="{x:Null}" Grid.Row="2" Grid.Column="1" BorderBrush="LightGray">
                <DockPanel LastChildFill="True">
                    <Image DockPanel.Dock="Left" Source="Images/Button/paste.png"/>
                    <Label HorizontalContentAlignment="Center" DockPanel.Dock="Right">붙여넣기</Label>
                </DockPanel>
            </Button>
            <Rectangle Grid.Column="2" Grid.RowSpan="3" Fill="Gray"/>


            <Button x:Name="NewSlideButton" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="0,1,0,1" Background="{x:Null}" Grid.Row="0" Grid.Column="3" Grid.RowSpan="3" BorderBrush="LightGray" Click="NewSlideButton_Click" >
                <DockPanel LastChildFill="True">
                    <Image DockPanel.Dock="Top" Source="Images/Button/newslide.png" Height="34"/>
                    <Label HorizontalContentAlignment="Center" DockPanel.Dock="Bottom" FontSize="9">새 슬라이드</Label>
                </DockPanel>
            </Button>

            <Rectangle Grid.Column="4" Grid.RowSpan="3" Fill="Gray"/>
            <ComboBox x:Name="FontFamily_ComboBox" ItemsSource="{Binding Source={x:Static Fonts.SystemFontFamilies}}" Grid.Column="5" HorizontalAlignment="Left" Width="140" Margin="5,15,0,0" VerticalAlignment="Top" Background="{x:Null}" BorderBrush="LightGray" IsSynchronizedWithCurrentItem="True" Height="25" Grid.RowSpan="3">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding}" FontFamily="{Binding}" FontSize="16"/>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>
            <ComboBox x:Name="FontSize_ComboBox" ItemsSource="{Binding Source={x:Static SystemFonts.IconFontStyleKey}}" Grid.Column="6" HorizontalAlignment="Left" Width="50" Margin="5,15,0,0" VerticalAlignment="Top" Background="{x:Null}" BorderBrush="LightGray" Height="25" Grid.RowSpan="3"/>
            <Button x:Name="BoldButton" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="5,0,0,15" Background="{x:Null}" Grid.Column="5" Grid.RowSpan="3" Grid.ColumnSpan="2" BorderBrush="{x:Null}" Height="25">
                <DockPanel LastChildFill="True">
                    <Image DockPanel.Dock="Bottom" Source="Images/Button/bold.png"/>
                </DockPanel>
            </Button>
            <Button x:Name="ItalicButton" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="35,0,0,15" Background="{x:Null}" Grid.Column="5" Grid.RowSpan="3" Grid.ColumnSpan="2" BorderBrush="{x:Null}" Height="25">
                <DockPanel LastChildFill="True">
                    <Image DockPanel.Dock="Bottom" Source="Images/Button/italic.png"/>
                </DockPanel>
            </Button>
            <Button x:Name="UnderlineButton" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="65,0,0,15" Background="{x:Null}" Grid.Column="5" Grid.RowSpan="3" Grid.ColumnSpan="2" BorderBrush="{x:Null}" Height="25">
                <DockPanel LastChildFill="True">
                    <Image DockPanel.Dock="Bottom" Source="Images/Button/underline.png"/>
                </DockPanel>
            </Button>
            <Button x:Name="ShadowButton" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="95,0,0,15" Background="{x:Null}" Grid.Column="5" Grid.RowSpan="3" Grid.ColumnSpan="2" BorderBrush="{x:Null}" Height="25">
                <DockPanel LastChildFill="True">
                    <Image DockPanel.Dock="Bottom" Source="Images/Button/shadow.png"/>
                </DockPanel>
            </Button>
            <Button x:Name="FontColorButton" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="125,0,0,15" Background="{x:Null}" Grid.Column="5" Grid.RowSpan="3" Grid.ColumnSpan="2" BorderBrush="{x:Null}" Height="25">
                <DockPanel LastChildFill="True">
                    <Image DockPanel.Dock="Top" Source="Images/Button/fontcolor.png" Height="17"/>
                    <Rectangle DockPanel.Dock="Bottom" Width="20" Height="8" Fill="Black"/>
                </DockPanel>
            </Button>
            <Rectangle Grid.Column="7" Grid.RowSpan="3" Fill="Gray"/>

            <Button x:Name="TextFlowButton" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="5,15,0,0" Background="{x:Null}" Grid.Column="8" Grid.RowSpan="3" BorderBrush="{x:Null}" Height="26" Width="84">
                <DockPanel LastChildFill="True">
                    <Image DockPanel.Dock="Left" Source="Images/Button/textflow.png" Height="16"/>
                    <Label HorizontalContentAlignment="Left" DockPanel.Dock="Right" FontSize="10">텍스트 방향</Label>
                </DockPanel>
            </Button>
            <Button x:Name="TextArrangeButton" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="95,15,0,0" Background="{x:Null}" Grid.Column="8" Grid.RowSpan="3" BorderBrush="{x:Null}" Height="26" Width="84">
                <DockPanel LastChildFill="True">
                    <Image DockPanel.Dock="Left" Source="Images/Button/textarrange.png" Height="16"/>
                    <Label HorizontalContentAlignment="Left" DockPanel.Dock="Right" FontSize="10">텍스트 맞춤</Label>
                </DockPanel>
            </Button>
            <Button x:Name="NormalButton" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="10,0,0,15" Background="{x:Null}" Grid.Column="8" Grid.RowSpan="3" Grid.ColumnSpan="2" BorderBrush="{x:Null}" Height="25">
                <DockPanel LastChildFill="True">
                    <Image DockPanel.Dock="Bottom" Source="Images/Button/normalalignment.png"/>
                </DockPanel>
            </Button>
            <Button x:Name="LeftButton" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="55,0,0,15" Background="{x:Null}" Grid.Column="8" Grid.RowSpan="3" Grid.ColumnSpan="2" BorderBrush="{x:Null}" Height="25">
                <DockPanel LastChildFill="True">
                    <Image DockPanel.Dock="Bottom" Source="Images/Button/leftalignment.png"/>
                </DockPanel>
            </Button>
            <Button x:Name="CenterButton" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="95,0,0,15" Background="{x:Null}" Grid.Column="8" Grid.RowSpan="3" Grid.ColumnSpan="2" BorderBrush="{x:Null}" Height="25">
                <DockPanel LastChildFill="True">
                    <Image DockPanel.Dock="Bottom" Source="Images/Button/centeralignment.png"/>
                </DockPanel>
            </Button>
            <Button x:Name="RightButton" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="135,0,0,15" Background="{x:Null}" Grid.Column="8" Grid.RowSpan="3" Grid.ColumnSpan="2" BorderBrush="{x:Null}" Height="25">
                <DockPanel LastChildFill="True">
                    <Image DockPanel.Dock="Bottom" Source="Images/Button/rightalignment.png"/>
                </DockPanel>
            </Button>
            <Rectangle Grid.Column="9" Grid.RowSpan="3" Fill="Gray"/>
        </Grid>
        <Grid x:Name="InsertMenu_Grid"  Grid.Row="2" Grid.RowSpan="1" Grid.ColumnSpan="2" Visibility="Collapsed">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
        </Grid>
        <Grid x:Name="DesignMenu_Grid"  Grid.Row="2" Grid.RowSpan="1" Grid.ColumnSpan="2" Visibility="Collapsed"></Grid>
        <Grid x:Name="AnimationMenu_Grid"  Grid.Row="2" Grid.RowSpan="1" Grid.ColumnSpan="2" Visibility="Collapsed"></Grid>
        <Grid x:Name="ConvertMenu_Grid"  Grid.Row="2" Grid.RowSpan="1" Grid.ColumnSpan="2" Visibility="Collapsed"></Grid>
        <Grid x:Name="StyleMenu_Grid"  Grid.Row="2" Grid.RowSpan="1" Grid.ColumnSpan="2" Visibility="Collapsed"></Grid>



        <Button x:Name="PenButton" Content="펜" HorizontalAlignment="Left" Margin="500,10,0,0" Grid.Row="2" VerticalAlignment="Top" Width="50" PreviewMouseLeftButtonDown="Pen_PreviewMouseLeftButtonDown" PreviewMouseLeftButtonUp="Pen_PreviewMouseLeftButtonUp" RenderTransformOrigin="-0.82,-1.137" Grid.Column="1"/>
        <Button x:Name="TextButton" Content="텍스트" Grid.Column="1" HorizontalAlignment="Left" Margin="555,10,0,0" Grid.Row="2" VerticalAlignment="Top" Width="50" PreviewMouseLeftButtonDown="Text_PreviewMouseLeftButtonDown" PreviewMouseLeftButtonUp="Text_PreviewMouseLeftButtonUp"/>
        <Button x:Name="LineButton" Content="선" Grid.Column="1" HorizontalAlignment="Left" Margin="555,35,0,0" Grid.Row="2" VerticalAlignment="Top" Width="50" PreviewMouseLeftButtonDown="Line_PreviewMouseLeftButtonDown" PreviewMouseLeftButtonUp="Line_PreviewMouseLeftButtonUp"/>
        <Button x:Name="RectangleButton" Content="사각형" Grid.Column="1" HorizontalAlignment="Left" Margin="270,0,0,0" Grid.Row="1" VerticalAlignment="Top" Width="50" PreviewMouseLeftButtonDown="Rectangle_PreviewMouseLeftButtonDown" PreviewMouseLeftButtonUp="Rectangle_PreviewMouseLeftButtonUp" Grid.RowSpan="2"/>
        <Button x:Name="PolygonButton" Content="다각형" Grid.Column="1" HorizontalAlignment="Left" Margin="328,0,0,0" Grid.Row="1" VerticalAlignment="Top" Width="50" PreviewMouseLeftButtonDown="Polygon_PreviewMouseLeftButtonDown" PreviewMouseLeftButtonUp="Polygon_PreviewMouseLeftButtonUp" Grid.RowSpan="2"/>
        <Button x:Name="ImageButton" Content="이미지" Grid.Column="1" HorizontalAlignment="Left" Margin="396,14,0,0" VerticalAlignment="Top" Width="50" Click="Image_Click" Grid.RowSpan="2" />
        <Button x:Name="TableButton" Content="표" Grid.Column="1" HorizontalAlignment="Left" Margin="500,35,0,0" Grid.Row="2" VerticalAlignment="Top" Width="50" Click="Table_Click" />
        <Button x:Name="ClearAllButton" Content="선택취소" Grid.Column="1" HorizontalAlignment="Left" Margin="451,0,0,0" Grid.Row="1" VerticalAlignment="Top" Width="50" Click="ClearAll_Click" Grid.RowSpan="2"/>
        <Button x:Name="EllipseButton" Content="원" Grid.Column="1" HorizontalAlignment="Left" Margin="521,0,0,0" Grid.Row="1" VerticalAlignment="Top" Width="50" Click="Ellipse_Click" Grid.RowSpan="2"/>
        <Button Content="저장" HorizontalAlignment="Left" Margin="10,0,0,0" VerticalAlignment="Top" Click="Save_Click" />
        <Button Grid.ColumnSpan="2" Content="Button" HorizontalAlignment="Left" Margin="60,0,0,0" VerticalAlignment="Top" Width="75" Click="Open_Click"/>
    </Grid>
</Window>

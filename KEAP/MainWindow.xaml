<Window x:Class="KEAP.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow">
    <Grid x:Name="MainGrid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.7*"/>
            <ColumnDefinition Width="3.75*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.14*"/>
            <RowDefinition Height="0.14*"/>
            <RowDefinition Height="0.4*"/>
            <RowDefinition Height="0.14*"/>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="0.4*"/>
            <RowDefinition Height="0.1*"/>
        </Grid.RowDefinitions>
        <ListView x:Name="Slide_ListView" Grid.Row="4" Margin="0">
            <ListView.View>
                <GridView>
                    <GridViewColumn/>
                </GridView>
            </ListView.View>
        </ListView>
        <Button x:Name="PenButton" Content="Pen" Grid.Column="1" HorizontalAlignment="Left" Margin="20,10,0,0" Grid.Row="2" VerticalAlignment="Top" Width="70" PreviewMouseLeftButtonDown="Pen_PreviewMouseLeftButtonDown" PreviewMouseLeftButtonUp="Pen_PreviewMouseLeftButtonUp"/>
        <Button x:Name="TextButton" Content="Text" Grid.Column="1" HorizontalAlignment="Left" Margin="100,10,0,0" Grid.Row="2" VerticalAlignment="Top" Width="70" PreviewMouseLeftButtonDown="Text_PreviewMouseLeftButtonDown" PreviewMouseLeftButtonUp="Text_PreviewMouseLeftButtonUp"/>
        <Button x:Name="LineButton" Content="Line" Grid.Column="1" HorizontalAlignment="Left" Margin="180,10,0,0" Grid.Row="2" VerticalAlignment="Top" Width="70" PreviewMouseLeftButtonDown="Line_PreviewMouseLeftButtonDown" PreviewMouseLeftButtonUp="Line_PreviewMouseLeftButtonUp"/>
        <Button x:Name="RectangleButton" Content="Rectangle" Grid.Column="1" HorizontalAlignment="Left" Margin="260,10,0,0" Grid.Row="2" VerticalAlignment="Top" Width="70" PreviewMouseLeftButtonDown="Rectangle_PreviewMouseLeftButtonDown" PreviewMouseLeftButtonUp="Rectangle_PreviewMouseLeftButtonUp"/>
        <Button x:Name="PolygonButton" Content="Polygon" Grid.Column="1" HorizontalAlignment="Left" Margin="340,10,0,0" Grid.Row="2" VerticalAlignment="Top" Width="70" PreviewMouseLeftButtonDown="Polygon_PreviewMouseLeftButtonDown" PreviewMouseLeftButtonUp="Polygon_PreviewMouseLeftButtonUp"/>
        <Button x:Name="ImageButton" Content="Image" Grid.Column="1" HorizontalAlignment="Left" Margin="420,10,0,0" Grid.Row="2" VerticalAlignment="Top" Width="70" PreviewMouseLeftButtonDown="Image_PreviewMouseLeftButtonDown" PreviewMouseLeftButtonUp="Image_PreviewMouseLeftButtonUp"/>
        <Button x:Name="TableButton" Content="Table" Grid.Column="1" HorizontalAlignment="Left" Margin="500,10,0,0" Grid.Row="2" VerticalAlignment="Top" Width="70" PreviewMouseLeftButtonDown="Table_PreviewMouseLeftButtonDown" PreviewMouseLeftButtonUp="Table_PreviewMouseLeftButtonUp"/>
    </Grid>
</Window>

                <ColumnDefinition Width="80"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Button Grid.Row="0" Grid.Column="0" Margin="5,10,5,5" Content="BoundsLTR" HorizontalAlignment="Center" VerticalAlignment="Center" Width="Auto" Click="BoundsLTR_Click"/>
            <Button Grid.Row="1" Grid.Column="0" Margin="5,10,5,5" Content="BoundsRTL" HorizontalAlignment="Center" VerticalAlignment="Center" Width="Auto" Click="BoundsRTL_Click" />
            <Button Grid.Row="0" Grid.Column="2" Margin="5,10,5,5" Content="BoundsTTB" HorizontalAlignment="Center" VerticalAlignment="Center" Width="Auto" Click="BoundsTTB_Click" />
            <Button Grid.Row="1" Grid.Column="2" Margin="5,10,5,5" Content="BoundsBTT" HorizontalAlignment="Center" VerticalAlignment="Center" Width="Auto" Click="BoundsBTT_Click"/>
            <Button Grid.Row="0" Grid.Column="4" Margin="5,10,5,5" Content="MoveLTR" HorizontalAlignment="Center" VerticalAlignment="Center" Width="Auto" Click="MoveLTR_Click" />
            <Button Grid.Row="1" Grid.Column="4" Margin="5,10,5,5" Content="MoveRTL" HorizontalAlignment="Center" VerticalAlignment="Center" Width="Auto" Click="MoveRTL_Click"/>
            <Button Grid.Row="0" Grid.Column="6" Margin="5,10,5,5" Content="MoveTTB" HorizontalAlignment="Center" VerticalAlignment="Center" Width="Auto" Click="MoveTTB_Click"/>
            <Button Grid.Row="1" Grid.Column="6" Margin="5,10,5,5" Content="MoveBTT" HorizontalAlignment="Center" VerticalAlignment="Center" Width="Auto" Click="MoveBTT_Click"/>
